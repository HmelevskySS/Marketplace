{
    "compilerOptions": {
      "target": "es6",  
      "module": "commonjs",  
      "strict": true,       
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": ".",
      "resolveJsonModule": true,
      "outDir": "./dist",     
      "sourceMap": true         
    },
    "include": [
        "src/**/*",
        "tests/**/*.ts"
    ],   
    "exclude": ["node_modules"]
  }
  